---
interface Props {
  subtitle: string;
  description: string;
}

const { subtitle, description } = Astro.props;
---

<div
  id={subtitle.toLocaleLowerCase().replaceAll(" ", "-")}
  class="relative flex flex-col items-center md:flex-row scroll-m-28"
>
  <div class="row items-center py-5 md:pr-16 md:py-10 md:w-4/12">
    <div class="text-center md:text-left space-y-3 bg-lime md:w-8/12">
      <h2 class="text-4xl font-medium leading-none sm:text-6xl">{subtitle}</h2>
    </div>
  </div>
  <div class="flex items-center py-5 md:w-8/12 md:py-10">
    <p class="text-xl font-normal leading-7 text-center md:text-left">
      {description}
    </p>
  </div>
</div>
